@model EntityLayer.Concrete.Service
@{
    ViewData["Title"] = "EditService";
    Layout = "~/Views/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Düzenleme Sayfası</h4>
            <form class="forms-sample" method="post">
                @Html.HiddenFor(x => x.ServiceID)
                <div class="form-group">
                    <label for="exampleInputName1">Başlık</label>
                    @Html.EditorFor(x => x.Title, new { htmlAttributes = new { @class = "form-control", @id = "exampleInputName1", placeholder = "Başlık" } })
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Görsel</label>
                    @Html.EditorFor(x => x.Image, new { htmlAttributes = new { @class = "form-control", @id = "exampleInputEmail3", placeholder = "Görsel" } })
                </div>
                <div class="form-group">
                    <label for="exampleTextarea1">Açıklama</label>
                    @Html.TextAreaFor(x => x.Description, new { @class = "form-control", @id = "exampleTextarea1", rows = 4 })
                </div>
                <button type="submit" class="btn btn-outline-info">Kaydet</button>
                <button class="btn btn-light">Vazgeç</button>
            </form>
        </div>
    </div>
</div>
