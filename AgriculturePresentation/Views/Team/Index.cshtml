@using EntityLayer.Concrete
@model List<Team>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/_AdminLayout.cshtml";
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Takım Arkadaşı Listesi</h4>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>ID</th>
                            <th>AdSoyad</th>
                            <th>Görev</th>
                            <th>Sil</th>
                            <th>Düzenle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td class="py-1"><img src="~/MajesticAdmin-Free-Bootstrap-Admin-Template-master/templates/images/faces/face1.jpg" alt="image" /> </td>
                            <td>@item.TeamID</td>
                            <td>@item.PersonName</td>
                            <td>@item.Title</td>
                            <td><a href="/Team/DeleteTeam/@item.TeamID" class="btn btn-outline-danger">Sil</a></td>
                            <td><a href="/Team/UpdateTeam/@item.TeamID" class="btn btn-outline-warning">Güncelle</a></td>
                        </tr>
                        }
                    </tbody>
                </table>
                <a href="/Team/AddTeam" class="btn btn-outline-info">Yeni Takım Arkadaşı Girişi</a>
            </div>
        </div>
    </div>
</div>
